#include <iostream>
#include <cmath>

using namespace std;

int main()
{
	double radius;
	double pi = 3.141592;

	cout << "Radius to area and circumference of a circle | volume and surface area of a sphere \n";
	cout << "----------------------------------------------------------------------------------- \n";
	cout << "Input radius: ";
	cin >> radius;

	cout << "Area of a circle: " << pi * pow(radius, 2) << "\n";
	cout << "Circumference of a circle: " << 2 * pi * radius << "\n";
	cout << "\n";

	cout << "Volume of a sphere: " << (4 / 3) * pi * pow(radius, 3) << "\n";
	cout << "Surface Area of a sphere: " << 4 * pi * pow(radius, 2) << "\n";

	return 0;
}

