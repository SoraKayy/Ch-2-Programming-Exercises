#include <iostream>
#include <cmath>
#include <algorithm> //invokes max() and min()

using namespace std;

int main()
{
	double first_Number;
	double second_Number;

	cout << "Enter your first number: ";
	cin >> first_Number;
	cout << "Enter your second number: ";
	cin >> second_Number;

	cout << "Sum: " << first_Number + second_Number << "\n";
	cout << "Difference: " << first_Number - second_Number << "\n";
	cout << "Product: " << first_Number * second_Number << "\n";
	cout << "Average: " << (first_Number + second_Number) / 2 << "\n";
	cout << "Distance: " << abs(first_Number - second_Number) << "\n";
	cout << "Maximum: " << max(first_Number, second_Number) << "\n";
	cout << "Minimum: " << min(first_Number, second_Number) << "\n";

	return 0;
}

