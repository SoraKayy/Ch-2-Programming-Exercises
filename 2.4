#include <iostream>
#include <cmath> // not needed for basic math functions

using namespace std;

int main()
{
	double meters;

	cout << "Conversion from meters to miles, feet, and inches \n";
	cout << "--------------------------------------------------\n";
	cout << "Input your number: ";
	cin >> meters;
	
	cout << "\n"; // extra line for A E S T H E T I C S
	
	cout << meters * 0.000621371 << " Miles \n";
	cout << meters * 3.2808388799999997 << " Meters \n";
	cout << meters * 39.3701 << " Inches \n";

	return 0;
}

